<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.spectronlabs.marieteameditor.HelloController">

  <stylesheets>
    <URL value="@style.css"/>
  </stylesheets>

  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <ComboBox fx:id="boatSelector" promptText="Select a boat"/>

  <GridPane hgap="10" vgap="10">
    <Label text="Boat Name:"/>
    <TextField fx:id="boatName" GridPane.columnIndex="1"/>

    <Label text="Length (m):" GridPane.rowIndex="1"/>
    <TextField fx:id="lengthField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Width (m):" GridPane.rowIndex="2"/>
    <TextField fx:id="widthField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Speed (knots):" GridPane.rowIndex="3"/>
    <TextField fx:id="speedField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Equipments:" GridPane.rowIndex="4"/>
    <TextArea fx:id="equipmentsField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
  </GridPane>

  <Label text="Image Preview:"/>
  <ImageView fx:id="imagePreview" fitWidth="400" fitHeight="300" preserveRatio="true"/>

  <Label text="Image URL:"/>
  <TextField fx:id="imageUrl"/>

  <Button text="Generate Preview" onAction="#onGeneratePreview" styleClass="button"/>
  <Button text="Export PDF" onAction="#onExportPdf"/>

  <Label text="PDF Preview:"/>
  <TextArea fx:id="pdfPreview" prefRowCount="5"/>
</VBox>
